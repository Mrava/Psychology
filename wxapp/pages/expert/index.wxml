<!-- 顶部页面 -->
<view class="a-fixed bg-green shadow-blur">
  <view style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;display:flex;flex-direction:column;justify-content:center;">
    <view class="cu-bar search" style="width:550rpx;min-height:0rpx;">
      <view class='search-form round' style="height:60rpx">
        <text class="icon-search"></text>
        <input type="text" placeholder="搜索专家名称" confirm-type="search" />
      </view>
    </view>
  </view>
</view>
<!-- 专家list -->
<view class="cu-card case" style="padding-top:{{CustomBar+5}}px">
  <view wx:for="{{expert_list}}" wx:key class="cu-item shadow">
    <view class='image'>
      <image src="{{item.photo}}" mode="aspectFill" style="height:500rpx"></image>
      <view class="cu-tag bg-blue">{{item.classify}}</view>
      <view class='cu-bar bg-white' style="background-image:linear-gradient(rgba(255, 255, 255, 0.01), rgba(255, 255, 255, 1));">
        <text class='text-cut text-black' style="width:100%;">{{item.info}}</text>
      </view>
    </view>
    <view class="cu-list menu menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar round lg" style="background-image:url({{item.icon}});"></view>
        <view class='content flex-sub'>
          <view class='text-grey'>{{item.name}}</view>
          <view class='text-gray text-sm flex justify-between'>
            <text class="text-cut" style="width:300rpx">{{item.address}}</text>
            <view class="text-gray text-sm">
              <text class="icon-phone"></text>
              10
              <text class="icon-comment"></text>
              20
              <text class="icon-appreciate"></text>
              30
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class='do'>
      <view class="icon-phone text-blue" catch:tap="call"> 电话联系</view>
      <view class="icon-message  text-green"> 在线沟通</view>
    </view>
  </view>
</view>
<view class='division'></view>